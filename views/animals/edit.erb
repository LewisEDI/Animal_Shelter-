<h2>Edit <%= @animal.name %></h2>
<form method="POST" action="/animals/<%= @animal.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name"><b>Name:</b></label>
      <input type="text" name="name" id="name" value="<%= @animal.name%>"/>
    </div>

    <div class="form-el">
      <label for="last_name"><b>Species:</b></label>
      <input type="text" name="species" id="species" value="<%= @animal.species%>"/>
    </div>

    <div class="form-el">
      <label for="last_name"><b>Breed:</b></label>
      <input type="text" name="breed" id="breed" value="<%= @animal.breed%>"/>
    </div>

<% if @animal.owner_id == nil %>
<label for="adoptable"><b>Is <%= @animal.name%> adoptable?:</b></label>
<select name="adoptable" id="adoptable">
  <option
  value="Yes"
  <%= "selected" if @animal.adoptable == "t" %>
  >Yes</option>
  <option
  value="No"
  <%= "selected" if @animal.adoptable == "f" %>
  >No</option>
</select>
<%end%>


    <div class="form-el">
      <input type="submit" value="Update <%= @animal.name %>'s Details"/>
    </div>

  </div>
</form>
