<h2>Edit <%= @owner.joined_name %></h2>
<form method="POST" action="/owners/<%= @owner.id %>">
  <div class="form-wrapper">

<div class="form-el">
  <label for="first_name"><b>First Name:</b></label>
  <input type="text" name="first_name" id="first_name" value="<%= @owner.first_name %>"/>
</div>

<div class="form-el">
  <label for="last_name"><b>Last Name:</b></label>
  <input type="text" name="last_name" id="last_name" value="<%= @owner.last_name %>"/>
</div>

<div class="form-el">
  <label for="phone_number"><b>Phone Number:</b></label>
  <input type="text" name="phone_number" id="phone_number" value="<%= @owner.phone_number %>"/>
</div>

<div class="form-el">
  <label for="address"><b>Address:</b></label>
  <input type="text" size="75" name="address" id="address" value="<%= @owner.address%>"/>
</div>

<div class="form-el">
  <input type="submit" value="Update <%= @owner.joined_name %>'s Details"/>
</div>

</form>
